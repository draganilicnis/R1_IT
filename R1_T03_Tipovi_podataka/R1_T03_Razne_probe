        T03_03_Tip_Konverzije_i_zaokruzivanje_Konverzije();
        T03_03_Tip_Konverzije_i_zaokruzivanje_Zaokruzivanje();
        T03_03_Tip_Konverzije_i_zaokruzivanje_o_gubitku_tacnosti();
        T03_04_Tip_Znakovni_podaci_char();
